<s:SurfaceWindow x:Class="TabletopBillboardApplication.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008" 
    xmlns:customUserControl="clr-namespace:TabletopBillboardApplication;assembly=TabletopBillboardApplication"
    Title="TabletopBillboardApplication"
    WindowState="Maximized"
    WindowStyle="None"
    >
    <!--xmlns:customUserControl="clr-namespace:TabletopBillboardApplication;assembly=TabletopBillboardApplication"-->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/SlottskogenZoom.jpg"/>
        </Grid.Background>

        <s:TagVisualizer 
            Name="MyTagVisualizer" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Background="Transparent" 
            Height="Auto" Width="Auto"
            VisualizationAdded="OnVisualizationAdded"
            VisualizationRemoved="OnVisualizationRemoved"
            >
            
        </s:TagVisualizer>

        <s:ScatterView x:Name="scatter">
            <s:ScatterViewItem Height="220" Width="220" Background="Transparent">
                <customUserControl:MyUserControl x:Name="test" Background="Transparent"/>
            </s:ScatterViewItem>
        </s:ScatterView>

    </Grid>
    
    
    
</s:SurfaceWindow>
